---
import { Image } from 'astro:assets';
import type { Products } from '@/api/typeModels';

const { product } = Astro.props as {product:Products} ;
---

<a 
	class="flex flex-col justify-center items-center mb-6" 
	href={`/${product.main_category}/${product.id}`}>
		<Image 
			src={product.main_image ? product.main_image : '../assets/default.png'}
			alt={`imagen de ${product.name}`}
			width={100}
			height={100}
			class="bg-colorBgCard p-2 w-full hover:scale-110 lg:h-[250px]"
		/>
		<p class="text-colorText text-center mt-2 font-ffText text-sm lg:text-lg md:h-9">{ product.name }</p>
		<p class="mt-3 font-ffPrimary font-bold text-colorAction hover:opacity-75 lg:text-xl">
			S/. { product.price.toLocaleString() }
		</p>
</a>
